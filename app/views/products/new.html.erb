
<h1>Add a new Product!</h1>


<%= form_tag '/products', method: :post do %>

  <div>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
  </div>
  <div>
    <%= label_tag :price %>
    <%= text_field_tag :price %>
  </div>
  <div>
    <%= label_tag :model %>
    <%= text_field_tag :model %>
  </div>
  <div>
    <%= label_tag :make %>
    <%= text_field_tag :make %>
  </div>
  <div>
    <%= label_tag :color %>
    <%= text_field_tag :color %>
  </div>
  <%= submit_tag "Add Product" %>

<% end %>