<h1>Update a new product!</h1>
 
 
 <%= form_tag "/products/#{@product.id}", method: :patch do %>
 
   <div>
     <%= label_tag :name %>
     <%= text_field_tag :name, @product.name %>
   </div>
   <div>
     <%= label_tag :price %>
     <%= text_field_tag :price, @product.price %>
   </div>
   <div>
     <%= label_tag :color %>
     <%= text_field_tag :color, @product.color %>
   </div>
    <div>
     <%= label_tag :make %>
     <%= text_field_tag :make, @product.color %>
   </div>
    <div>
     <%= label_tag :model %>
     <%= text_field_tag :model, @product.color %>
   </div>
   <%= submit_tag "Update product" %>
 
 <% end %> 