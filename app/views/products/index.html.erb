
<h1>Cars, Cars, Cars!!</h1>

<a href="/products?sort=price">Sort by Price</a>
<a href="/products?sort=price DESC">Sort by Descending Price</a>
<a href="/products?sort=name">Sort by Name</a>
<a href="/products?sort=discount">Discount Items</a>
<a href="/products/random">Random Items</a>

<%= form_tag "/search", method: :post do %>
<%= label_tag :user_search, "Search" %>
<%= text_field_tag :user_search %>
<%= submit_tag "Search" %>
    <% end %>




<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/products/<%= product.id %>">
        <p><%= product.name %></p>
        <p><%= number_to_currency(product.price)  %></p>
        <div>
          <img src="<%= product.image_url %>" width="200" height="200">
        </div>
      </a>
    </div>
  </div>
  <% end %>
</div>
