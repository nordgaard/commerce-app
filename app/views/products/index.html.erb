<h1>Cars, Cars, Cars!!</h1>

<a href="/products?sort=price">Sort by Price</a>
<a href="/products?sort=price DESC">Sort by Price</a>
<a href="/products?sort=name">Sort by Name</a>


<div class="row">
  <% @products.each do |product| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="/products/<%= product.id %>">
        <p><%= product.name %></p>
        <p><%= product.price %></p>
        <p><%= product.color %></p>
        <div>
          <img src="<%= product.image_url %>" width="200" height="200">
        </div>
      </a>
    </div>
  </div>
  <% end %>
</div>